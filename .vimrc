syntax on
set autoindent
set shiftwidth=2
set tabstop=4
set showcmd
set scrolloff=5
set hlsearch
set visualbell t_vb=
set noerrorbells
set cursorline
inoremap jj <ESC>
inoremap JJ <ESC>
set clipboard=unnamed,autoselect
noremap <S-h> ^
noremap <S-l> $
inoremap Caps_Lock Zenkaku_Hankaku
noremap Caps_Lock Zenkaku_Hankaku
inoremap  <DEL>
inoremap <BS> <C-BS>
colorscheme molokai

syntax on
highlight Normal ctermbg=black ctermfg=grey
set mouse=a
set number
set ignorecase
set smartcase

set nocompatible
set backspace=indent,eol,start
set clipboard+=unnamed
set clipboard=unnamed
set nostartofline
set matchpairs& matchpairs+=<:>
set showmatch
set matchtime=3
set wrap
set textwidth=0

